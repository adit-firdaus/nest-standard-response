{
  "name": "nest-standard-response",
  "version": "1.2.1",
  "description": "Standardized and configurable API responses for NestJS",
  "main": "dist/index",
  "scripts": {
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simioni/nest-standard-response.git"
  },
  "keywords": [
    "nestjs",
    "typescript",
    "rest",
    "pagination",
    "sorting",
    "filtering",
    "interceptor",
    "decorator",
    "metadata"
  ],
  "author": "Ricardo Simioni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simioni/nest-standard-response/issues"
  },
  "homepage": "https://github.com/simioni/nest-standard-response#readme",
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/swagger": "^7.1.12",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/cli": "^10.1.18",
    "jest": "^29.5.0",
    "@types/jest": "^29.5.2",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
